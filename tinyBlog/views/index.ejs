<%  include partials/header %>
<div class="ui main text container" style="margin-top: 7em">
    <div class="ui huge header">
        <h1>
            <%=appName%>
        </h1>
    </div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <%blogs.forEach(function (blog) { %>
            <div class="item">
                <div class="image">
                    <img class="ui centered rounded image" src="<%=blog.image%>"/>
                </div>
                <div class="content">
                    <a class="header" href="/blog/<%= blog._id%>">
                        <%=blog.title%>
                    </a>
                    <div class="meta">
                        <span>
                            <%=blog.created.toDateString() %>
                        </span>
                    </div>
                    <div class="description">
                        <p>
                            <!-- Notice we use %- here to read html data pushed into the blog  -->
                            <%-blog.body.substring(0,200)%>...
                        </p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic violet button" href="/blog/<%= blog._id%>">
                            Read More
                            <i class="right chevron icon">
                            </i>
                        </a>
                    </div>
                </div>
            </div>
            <% });%>
        </div>
    </div>
</div>
<% include partials/footer %>
