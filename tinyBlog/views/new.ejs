<% include ./partials/header %>
<div class="ui main text container segment" style="margin-top: 7em">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blog" method="POST">
        <div class="field">
            <label>Title</label>    
            <input type="text" name="blog[title]" placeholder="Title">
        </div>
        <div class="field">
            <label>Image URL</label> 
            <input type="text" name="blog[image]" placeholder="Image of the day">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"> </textarea>
        </div>
        <input class="ui black basic button" type="submit">
            
    </form>
</div>
